-- Adicionar colunas temporárias
ALTER TABLE orion_ind_110 ADD UNIDADE_MEDIDA_TEMP NUMBER(2);
ALTER TABLE orion_ind_110 ADD FREQUENCIA_MONITORAMENTO_TEMP NUMBER(2);
ALTER TABLE orion_ind_110 ADD FONTE_DADOS_TEMP NUMBER(2);
ALTER TABLE orion_ind_110 ADD POLARIDADE_TEMP NUMBER(2);

-- Copiar os dados das colunas originais para as colunas temporárias
UPDATE orion_ind_110 SET UNIDADE_MEDIDA_TEMP = UNIDADE_MEDIDA;
UPDATE orion_ind_110 SET FREQUENCIA_MONITORAMENTO_TEMP = FREQUENCIA_MONITORAMENTO;
UPDATE orion_ind_110 SET FONTE_DADOS_TEMP = FONTE_DADOS;
UPDATE orion_ind_110 SET POLARIDADE_TEMP = POLARIDADE;

-- Remover as colunas originais
ALTER TABLE orion_ind_110 DROP COLUMN UNIDADE_MEDIDA;
ALTER TABLE orion_ind_110 DROP COLUMN FREQUENCIA_MONITORAMENTO;
ALTER TABLE orion_ind_110 DROP COLUMN FONTE_DADOS;
ALTER TABLE orion_ind_110 DROP COLUMN POLARIDADE;

-- Renomear as colunas temporárias para o nome original
ALTER TABLE orion_ind_110 RENAME COLUMN UNIDADE_MEDIDA_TEMP TO UNIDADE_MEDIDA;
ALTER TABLE orion_ind_110 RENAME COLUMN FREQUENCIA_MONITORAMENTO_TEMP TO FREQUENCIA_MONITORAMENTO;
ALTER TABLE orion_ind_110 RENAME COLUMN FONTE_DADOS_TEMP TO FONTE_DADOS;
ALTER TABLE orion_ind_110 RENAME COLUMN POLARIDADE_TEMP TO POLARIDADE;


-- Criar Coluna de Situacao Ativo / Inativo
ALTER TABLE orion_ind_110 ADD SITUACAO NUMBER(1);

-- Setar todos os registros como Ativo
UPDATE orion_ind_110 SET situacao = 1;

-- Alterar o Modulo da Tela
UPDATE orion_002 SET modulo = 'TI' WHERE id = 75
UPDATE orion_002 SET modulo = 'TI' WHERE id = 78