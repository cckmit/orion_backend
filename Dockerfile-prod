FROM maven:3.8.5-eclipse-temurin-11-focal
WORKDIR /build
COPY . /build
RUN mvn clean install
COPY /build/target/orionBackendJar.jar /app/orionBackendJar.jar
COPY /src/main/java/br/com/live/reports /app/reports/
WORKDIR /app
RUN mkdir /temp
ENTRYPOINT ["java", "-jar", "-Dspring.profiles.active=prod", "orionBackendJar.jar"]
EXPOSE 8081